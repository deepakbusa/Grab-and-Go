<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background color -->
    <solid android:color="#ffffff" />

    <!-- Set the corner radius to make it rounded -->
    <corners android:radius="20dp" />

    <!-- Optional: Set padding for internal spacing -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" />

    <!-- Set a border (stroke) around the input field -->
    <stroke
        android:width="1dp"
        android:color="#cccccc" />
</shape>
