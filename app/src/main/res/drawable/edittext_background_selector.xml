<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@android:color/holo_blue_light"/> <!-- Change the border color when focused -->
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@android:color/holo_blue_dark"/> <!-- Darker border color when pressed -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@android:color/black"/> <!-- Default border color -->
        </shape>
    </item>
</selector>
