<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Back"
        android:src="@drawable/back" />

    <!-- Add to Cart Button -->
    <ImageButton
        android:id="@+id/btn_add_cart"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Add to Cart"
        android:src="@drawable/add_to_cart" />

    <!-- Heading -->
    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop 2 Items"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/btn_back"
        android:layout_marginTop="16dp" />

    <!-- Items List -->
    <LinearLayout
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_heading"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <!-- Item 1 -->
        <LinearLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_border"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp"> <!-- Added bottom margin -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item A"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹100"
                android:textColor="@color/colorBackgroundDark"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/add_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Add Item A"
                android:src="@drawable/add1" />
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_border"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp"> <!-- Added bottom margin -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item B"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹200"
                android:textColor="@color/colorBackgroundDark"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/add_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Add Item B"
                android:src="@drawable/add1" />
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_border"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp"> <!-- Added bottom margin -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item C"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹300"
                android:textColor="@color/colorBackgroundDark"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/add_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Add Item C"
                android:src="@drawable/add1" />
        </LinearLayout>

        <!-- Repeat the above LinearLayout for additional items -->
    </LinearLayout>

    <!-- Home Button -->
    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Home"
        android:src="@drawable/home" />

    <!-- User Account Button -->
    <ImageButton
        android:id="@+id/btn_account"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="User Account"
        android:src="@drawable/user" />
</RelativeLayout>
