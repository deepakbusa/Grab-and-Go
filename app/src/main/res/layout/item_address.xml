<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="4dp"
    android:elevation="2dp"
    android:backgroundTint="@android:color/white"
    android:clipToPadding="false"
    tools:context=".AddressItem">

    <!-- Address Heading -->


    <!-- Address Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@android:color/white">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_add_location"
            android:contentDescription="Location Icon"
            android:layout_marginEnd="12dp"
            android:tint="@color/navy_blue" />

        <!-- Address Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:paddingBottom="2dp"
                android:text="Mobile: 1234567890" />  <!-- Removed bold -->

            <TextView
                android:id="@+id/tv_room_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="Room: 101"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tv_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="Block: A" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:text="Address: Example Street, City" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginHorizontal="8dp" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Select Button -->
        <Button
            android:id="@+id/btn_select"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_check_box_outline_blank"
            android:contentDescription="Select"
            android:tint="@color/navy_blue"
            android:scaleType="centerInside"
            android:padding="6dp" />

        <!-- Remove Button -->
        <Button
            android:id="@+id/btn_remove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_delete"
            android:contentDescription="Remove"
            android:tint="@android:color/holo_red_dark"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</LinearLayout>
